# CloudSim Backend Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=CloudSim
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://cloudsim:cloudsim_password@localhost:5432/cloudsim
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-change-me-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# AWS Simulation
DEFAULT_REGION=us-east-1
AVAILABLE_REGIONS=["us-east-1","us-west-2","eu-west-1","ap-southeast-1"]
DEFAULT_ACCOUNT_ID=123456789012

# Docker
DOCKER_HOST=
DOCKER_NETWORK_PREFIX=cloudsim
DOCKER_VOLUME_PREFIX=cloudsim

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
